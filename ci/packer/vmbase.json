{
  "builders": [
    {
      "type": "qemu",
      "iso_urls": [
        "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-10.8.0-amd64-netinst.iso"
      ],
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "auto=true <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=foo <wait>",
        "debconf/frontend=noninteractive <wait>",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "<enter><wait>"
      ],
      "iso_checksum": "sha256:396553f005ad9f86a51e246b1540c60cef676f9c71b95e22b753faef59f89bee",
      "output_directory": "debian_base",
      "http_directory": ".",
      "shutdown_command": "shutdown -P now",
      "disk_size": "5000M",
      "cpus": 2,
      "memory": 1024,
      "format": "qcow2",
      "ssh_username": "root",
      "ssh_password": "root",
      "ssh_timeout": "40m",
      "vm_name": "drak-ci",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "10s",
      "headless": true
    }
  ],
  "provisioners": [
      { "type": "shell", "script": "install_zfs.sh" },
      { "type": "shell", "inline": ["wget -q {{user `bundle_url`}} -O drakvuf-bundle.deb", "apt-get install -y ./drakvuf-bundle.deb", "rm drakvuf-bundle.deb"] },
      { "type": "shell", "inline": ["export DRAK_DOM0_CPU=1", "export DRAK_DOM0_RAM=2048", "update-grub"] }
  ]
}
