#!/usr/bin/env python

import os
import re

try:
    with open(os.path.join("/", "etc", "drakrun", "scripts", "cfg.template"), 'r') as f:
        template = f.read()

    m = re.search(r'vncpasswd[ ]*=(.*)', template)
    if m:
        passwd = m.group(1).strip()
        if passwd[0] == '"' and passwd[-1] == '"':
            passwd = passwd[1:-1]

    if (passwd):
        print(f"VNC password: {passwd}")
    else:
        print("VNC password not found. Have you ran draksetup postinstall?")

except Exception as e:
    print(f"Failed to run script:\n{str(e)}")